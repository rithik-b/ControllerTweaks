<bg id='root' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
	<vertical horizontal-fit='PreferredSize' vertical-fit='PreferredSize' preferred-height='45' preferred-width='120' active='~bg-active'>
		<bg bg='round-rect-panel' />
	</vertical>
	<vertical horizontal-fit='PreferredSize' vertical-fit='PreferredSize' preferred-height='45' preferred-width='115'>
		<horizontal spacing='5'>
			<vertical preferred-width='55'>
				<text text='Position' />
				<slider-setting id='position-x-slider' show-buttons='true' text='X' value='position-x' min='-10' max='10' increment='0.1' apply-on-change='true' bind-value='true' />
				<slider-setting id='position-y-slider' show-buttons='true' text='Y' value='position-y' min='-10' max='10' increment='0.1' apply-on-change='true' bind-value='true' />
				<slider-setting id='position-z-slider' show-buttons='true' text='Z' value='position-z' min='-10' max='10' increment='0.1' apply-on-change='true' bind-value='true' />
			</vertical>
			<vertical preferred-width='55'>
				<text text='Rotation' />
				<slider-setting id='rotation-x-slider' show-buttons='true' text='X' value='rotation-x' min='-180' max='180' increment='1' apply-on-change='true' bind-value='true' />
				<slider-setting id='rotation-y-slider' show-buttons='true' text='Y' value='rotation-y' min='-180' max='180' increment='1' apply-on-change='true' bind-value='true' />
				<slider-setting id='rotation-z-slider' show-buttons='true' text='Z' value='rotation-z' min='-180' max='180' increment='1' apply-on-change='true' bind-value='true' />
			</vertical>
		</horizontal>
		<horizontal pad-left='15' pad-right='15'>
			<button id='show-settings-button' text='⚙' on-click='show-settings-modal' />
			<button id='show-presets-button' text='Presets' on-click='show-presets-modal' />
		</horizontal>
	</vertical>
	<button text='&lt;' on-click='back-button-clicked' anchor-pos-x='20' active='~back-button-active' />
</bg>