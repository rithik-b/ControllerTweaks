<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
	<vertical>
		<modifier-container child-expand-width='true' horizontal-fit='PreferredSize'>
			<checkbox-setting id='swap-checkbox' text='Enable Controller Swap' value='controller-swap-enabled' apply-on-change='true' hover-hint='Swap the left and right controllers. Useful for grips that require holding the opposite controllers.' />
		</modifier-container>
		<clickable-image src='~imagesrc' preserve-aspect='true' on-click='image-click' highlight-color='white' hover-hint='Mod commissioned by Electrostats.' />
	</vertical>
</bg>